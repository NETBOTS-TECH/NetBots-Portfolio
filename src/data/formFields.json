{
  "formName": "Training Program Application",
  "version": "1.0",
  "sections": {
    "trainingProgram": {
      "title": "Training Program Selection",
      "required": true,
      "type": "select",
      "options": [
        "Vibe Coding - Full Stack Development",
        "AI & Machine Learning",
        "Cloud Computing & DevOps",
        "Mobile App Development",
        "UI/UX Design",
        "Digital Marketing",
        "Blockchain Development",
        "Cybersecurity",
        "Data Science & Analytics",
        "Game Development"
      ]
    },
    "personalInfo": {
      "title": "Personal Information",
      "fields": {
        "name": {
          "type": "text",
          "required": true,
          "label": "Full Name",
          "placeholder": "Enter your full name",
          "icon": "FaUser"
        },
        "fatherName": {
          "type": "text",
          "required": false,
          "label": "Father's Name",
          "placeholder": "Optional: Enter your father's name",
          "icon": "FaUser"
        },
        "address": {
          "type": "text",
          "required": true,
          "label": "Address",
          "placeholder": "Enter your complete address",
          "icon": "FaMapMarkerAlt"
        },
        "phone": {
          "type": "tel",
          "required": true,
          "label": "Phone Number",
          "placeholder": "Enter your phone number",
          "icon": "FaPhone",
          "validation": "^\\+?[\\d\\s-]{10,}$"
        },
        "email": {
          "type": "email",
          "required": true,
          "label": "Email",
          "placeholder": "Enter your email address",
          "icon": "FaEnvelope",
          "validation": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
        },
        "linkedinUrl": {
          "type": "url",
          "required": false,
          "label": "LinkedIn Profile",
          "placeholder": "Optional: Your LinkedIn profile URL",
          "icon": "FaLinkedin"
        },
        "githubUrl": {
          "type": "url",
          "required": false,
          "label": "GitHub Profile",
          "placeholder": "Optional: Your GitHub profile URL",
          "icon": "FaGithub"
        },
        "portfolioUrl": {
          "type": "url",
          "required": false,
          "label": "Portfolio Website",
          "placeholder": "Optional: Your portfolio website URL",
          "icon": "FaGlobe"
        }
      }
    },
    "experience": {
      "title": "Work Experience",
      "required": false,
      "icon": "FaBriefcase",
      "maxEntries": 3,
      "fields": {
        "title": {
          "type": "text",
          "label": "Job Title",
          "placeholder": "Optional: e.g., Software Developer"
        },
        "company": {
          "type": "text",
          "label": "Company",
          "placeholder": "Optional: Company name"
        },
        "duration": {
          "type": "text",
          "label": "Duration",
          "placeholder": "Optional: e.g., Jan 2020 - Present"
        },
        "description": {
          "type": "textarea",
          "label": "Description",
          "placeholder": "Optional: Describe your responsibilities and achievements"
        }
      }
    },
    "education": {
      "title": "Latest Education",
      "required": true,
      "icon": "FaGraduationCap",
      "fields": {
        "degree": {
          "type": "text",
          "required": true,
          "label": "Degree/Certificate",
          "placeholder": "Enter your degree or certificate name"
        },
        "institution": {
          "type": "text",
          "required": true,
          "label": "Institution",
          "placeholder": "Enter your institution name"
        },
        "year": {
          "type": "text",
          "required": true,
          "label": "Year",
          "placeholder": "Enter completion year"
        },
        "grade": {
          "type": "text",
          "required": true,
          "label": "Grade/CGPA",
          "placeholder": "Enter your grade or CGPA"
        }
      }
    },
    "courses": {
      "title": "Courses",
      "required": false,
      "icon": "FaCode",
      "maxEntries": 3,
      "fields": {
        "name": {
          "type": "text",
          "label": "Course Name",
          "placeholder": "Optional: Enter course name"
        },
        "institution": {
          "type": "text",
          "label": "Institution",
          "placeholder": "Optional: Enter institution name"
        },
        "year": {
          "type": "text",
          "label": "Year",
          "placeholder": "Optional: Enter completion year"
        }
      }
    },
    "certifications": {
      "title": "Certifications",
      "required": false,
      "icon": "FaCertificate",
      "maxEntries": 3,
      "fields": {
        "name": {
          "type": "text",
          "label": "Certification Name",
          "placeholder": "Optional: Enter certification name"
        },
        "issuingOrganization": {
          "type": "text",
          "label": "Issuing Organization",
          "placeholder": "Optional: Enter issuing organization"
        },
        "year": {
          "type": "text",
          "label": "Year",
          "placeholder": "Optional: Enter completion year"
        }
      }
    },
    "programmingSkills": {
      "title": "Programming Skills",
      "required": false,
      "icon": "FaCode",
      "type": "checkboxGroup",
      "categories": {
        "frontend": {
          "label": "Frontend Development",
          "skills": [
            "HTML5",
            "CSS3",
            "JavaScript (ES6+)",
            "TypeScript",
            "React.js",
            "Next.js",
            "Vue.js",
            "Angular",
            "Tailwind CSS",
            "SASS/SCSS",
            "Bootstrap",
            "Redux",
            "GraphQL Client",
            "WebPack",
            "Vite"
          ]
        },
        "backend": {
          "label": "Backend Development",
          "skills": [
            "Node.js",
            "Express.js",
            "Python",
            "Django",
            "Java",
            "Spring Boot",
            "PHP",
            "Laravel",
            "Ruby on Rails",
            "ASP.NET Core",
            "GraphQL",
            "REST API",
            "WebSocket",
            "Microservices"
          ]
        },
        "database": {
          "label": "Database Technologies",
          "skills": [
            "MongoDB",
            "PostgreSQL",
            "MySQL",
            "Redis",
            "Firebase",
            "Elasticsearch",
            "DynamoDB",
            "Oracle",
            "MS SQL Server",
            "Cassandra"
          ]
        },
        "mobile": {
          "label": "Mobile Development",
          "skills": [
            "React Native",
            "Flutter",
            "iOS (Swift)",
            "Android (Kotlin)",
            "Xamarin",
            "Ionic",
            "Mobile App Testing",
            "App Store Optimization"
          ]
        },
        "devops": {
          "label": "DevOps & Cloud",
          "skills": [
            "Docker",
            "Kubernetes",
            "AWS",
            "Azure",
            "Google Cloud",
            "CI/CD",
            "Jenkins",
            "Git",
            "Linux",
            "Nginx",
            "Terraform",
            "Ansible"
          ]
        },
        "testing": {
          "label": "Testing & QA",
          "skills": [
            "Jest",
            "React Testing Library",
            "Cypress",
            "Selenium",
            "JUnit",
            "TestNG",
            "Postman",
            "Load Testing",
            "Security Testing"
          ]
        },
        "ai_ml": {
          "label": "AI & Machine Learning",
          "skills": [
            "TensorFlow",
            "PyTorch",
            "Scikit-learn",
            "NLP",
            "Computer Vision",
            "Deep Learning",
            "Data Analysis",
            "Neural Networks"
          ]
        },
        "other": {
          "label": "Other Technologies",
          "skills": [
            "Blockchain",
            "WebGL",
            "Unity",
            "AR/VR",
            "IoT",
            "Embedded Systems",
            "Web3",
            "Cybersecurity",
            "UI/UX Design"
          ]
        }
      }
    },
    "softSkills": {
      "title": "Soft Skills",
      "required": false,
      "icon": "FaTools",
      "type": "checkboxGroup",
      "options": [
        "Communication",
        "Team Work",
        "Problem Solving",
        "Time Management",
        "Leadership",
        "Adaptability",
        "Critical Thinking",
        "Creativity",
        "Emotional Intelligence",
        "Conflict Resolution",
        "Project Management",
        "Public Speaking",
        "Decision Making",
        "Stress Management"
      ]
    }
  },
  "validation": {
    "required": [
      "trainingProgram",
      "personalInfo.name",
      "personalInfo.email",
      "personalInfo.phone",
      "personalInfo.address",
      "education.degree",
      "education.institution",
      "education.year",
      "education.grade"
    ],
    "patterns": {
      "email": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "phone": "^\\+?[\\d\\s-]{10,}$"
    }
  },
  "submission": {
    "successMessage": "Thank you for your application! If you meet our criteria, our team will contact you soon.",
    "errorMessage": "Something went wrong. Please try again later.",
    "loadingMessage": "Submitting..."
  }
} 